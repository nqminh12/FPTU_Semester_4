<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>Filter.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Ad1</servlet-name>
        <servlet-class>Controllers.Admin.Ad1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mem1</servlet-name>
        <servlet-class>Controllers.Member.Mem1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Other</servlet-name>
        <servlet-class>Controllers.Other.Other</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Guest</servlet-name>
        <servlet-class>Controllers.Guest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controllers.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ad2</servlet-name>
        <servlet-class>Controllers.Admin.Ad2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mem2</servlet-name>
        <servlet-class>Controllers.Member.Mem2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ad1</servlet-name>
        <url-pattern>/Admin/Ad1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mem1</servlet-name>
        <url-pattern>/Member/Mem1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Other</servlet-name>
        <url-pattern>/Other/Other</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Guest</servlet-name>
        <url-pattern>/Guest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ad2</servlet-name>
        <url-pattern>/Admin/Ad2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mem2</servlet-name>
        <url-pattern>/Member/Mem2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
